@model CBA.Core.CurrentAccountConfiguration

@{
    ViewBag.Title = "Current Configuration Details";
}

<h2>Current Configuration Details</h2>


@if (ViewBag.IsConfigured)
{
    <div>
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.CreditInterestRate)</h3>
            </div>
            <div class="col-md-6">
                <h3> @Html.DisplayFor(model => model.CreditInterestRate)% per annum</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.MinimumBalance)</h3>
            </div>
            <div class="col-md-6">
                <h3><span data-currency-iso="NGN">&#8358;</span>@(Model.MinimumBalance.ToString("#,##0.00;(#,##0.00))"))</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.InterestExpenseGLAccount)</h3>
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayFor(model => model.InterestExpenseGLAccount.Name)</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.COT)</h3>  
            </div>
            <div class="col-md-6">
                <h3><span data-currency-iso="NGN">&#8358;</span>@Html.DisplayFor(model => model.COT) <span> per 1000</span></h3> 
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.COTIncomeGLAccount)</h3>
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayFor(model => model.COTIncomeGLAccount.Name)</h3> 
            </div>
        </div>

    </div>
    <p class="h4">
        @Html.ActionLink("Edit Configuration", "ConfigureCurrent"@*, new { id = Model.ID }*@)
    </p>
}
else
{
    <div>
        <h2 class="text-danger">Current Accounts not Configured</h2>
        <p>
            @Html.ActionLink("Configure", "ConfigureCurrent")
        </p>

    </div>
}
