@model CBA.Core.LoanAccountConfiguration

@{
    ViewBag.Title = "LoanConfigurationDetails";
}

<h2>Loan Configuration Details</h2>

@if (ViewBag.IsConfigured)
{
    <div>        
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.DebitInterestRate)</h3>
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayFor(model => model.DebitInterestRate)% </h3> 
            </div>
        </div>        
        <div class="row">
            <div class="col-md-6">
                <h3> @Html.DisplayNameFor(model => model.InterestIncomeGLAccount)</h3>
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayFor(model => model.InterestIncomeGLAccount.Name) </h3>
            </div>
        </div>

    </div>
    <p class="h4">
        @Html.ActionLink("Edit Configuration", "ConfigureLoan"@*, new { id = Model.ID }*@)
    </p>
}
else
{
    <div>
        <h2 class="text-danger">Loans not Configured</h2>
        <p class="h4">
            @Html.ActionLink("Configure", "ConfigureLoan")
        </p>

    </div>
}