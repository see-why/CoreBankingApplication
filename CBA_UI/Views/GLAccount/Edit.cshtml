@model CBA.Core.ViewModels.EditGLAccountView

@{
    ViewBag.Title = "Edit";
}

<h2>Edit GL Account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>EditGLAccountView</h4>*@
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.Label("GLCategory", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(ViewBag.GLCategory)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("GLCode", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @(ViewBag.GLCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Name)*@
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BranchID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BranchID, ViewBag.AllBranches as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BranchID)
            </div>
        </div>  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
